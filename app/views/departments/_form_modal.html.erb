<div class="modal-dialog modal-lg" role="document">
  <%= form_with model: department, url: department_path(department), method: :put, local: false do |f| %>
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" style="flex: 1"><%= t('form.edit') -%></h5>
        <div style="flex: 1" class="text-center"><%= t('ui.department_description') %></div>
        <a style="flex: 1" class="close text-right" data-dismiss="modal" aria-label="Close">
          <i class="fa fa-window-close"></i>
        </a>
      </div>
      <div class="modal-body">
        <form class="form-horizontal">
          <div class="form-group row">
            <label class="control-label col-md-3"><%= t('department.name') -%></label>
            <div class="col-md-8">
              <%= f.text_field :name, class: 'form-control' %>
            </div>
          </div>
          <div class="form-group row">
            <label class="control-label col-md-3"><%= t('department.department_allowed_application') -%></label>
            <div class="col-md-8">
              <%= f.select :allowed_application_ids, options_from_collection_for_select(DoorkeeperApplication.all, "id", "name", department.allowed_application_ids), {multiple: true}, class: 'form-control', id: 'department-allowed_application_ids-select' %>
            </div>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal"><%= t('ui.close') -%></button>
        <button class="btn btn-primary" type="submit">
          <i class="fa fa-fw fa-lg fa-check-circle"></i><%= t('ui.update') -%>
        </button>
      </div>
    </div>
  <% end %>
</div
